# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Site Settings
SITE_NAME=Na Porta
SITE_URL=https://naporta.free.nf
SITE_DESCRIPTION=Essenciais dom√©sticos na sua porta

# Environment (local, staging, production)
APP_ENV=production

# Debug Mode (true/false)
APP_DEBUG=false

# ============================================
# SECURITY CONFIGURATION
# ============================================

# Session Settings
SESSION_TIMEOUT=3600
SESSION_SECURE=true
SESSION_HTTPONLY=true

# CSRF Token
CSRF_TOKEN_LENGTH=32

# Password Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=false

# ============================================
# EMAIL CONFIGURATION
# ============================================

MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password
MAIL_FROM=noreply@naporta.com.br
MAIL_FROM_NAME=Na Porta

# ============================================
# PAYMENT CONFIGURATION
# ============================================

# Mercado Pago (if implemented)
MERCADO_PAGO_PUBLIC_KEY=your_public_key
MERCADO_PAGO_ACCESS_TOKEN=your_access_token

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================

# Upload Settings
UPLOAD_MAX_SIZE=5242880  # 5MB in bytes
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=uploads/

# ============================================
# API CONFIGURATION
# ============================================

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600  # 1 hour

# ============================================
# LOGGING CONFIGURATION
# ============================================

LOG_LEVEL=error
LOG_PATH=logs/
LOG_MAX_SIZE=10485760  # 10MB

# ============================================
# CACHE CONFIGURATION
# ============================================

CACHE_ENABLED=true
CACHE_TTL=3600

# ============================================
# LGPD CONFIGURATION
# ============================================

LGPD_ENABLED=true
LGPD_COOKIE_EXPIRY=31536000  # 1 year

# ============================================
# THIRD-PARTY SERVICES
# ============================================

# ViaCEP (Brazilian address lookup)
VIACEP_API_URL=https://viacep.com.br/ws

# Google Analytics (if implemented)
GOOGLE_ANALYTICS_ID=

# ============================================
# ADMIN CONFIGURATION
# ============================================

# Admin Panel Settings
ADMIN_PATH=/admin
ADMIN_SESSION_TIMEOUT=1800  # 30 minutes
ADMIN_REQUIRE_2FA=false

# ============================================
# MAINTENANCE MODE
# ============================================

MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistema em manuten√ß√£o. Voltaremos em breve!


